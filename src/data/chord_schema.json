  "slashChords": {
    "description": "Format: Chord/BassNote. The bass note is played in the lowest voice, independent of chord voicing.",
    "commonExamples": {
      "/E": "First inversion (3rd in bass for major/minor)",
      "/G": "Second inversion (5th in bass for major/minor)",
      "/B": "Third inversion (7th in bass for seventh chords)",
      "/X": "Where X is any chromatic note - polychord or specific voicing"
    }
  },
  "specialSymbols": {
    "N.C.": "No Chord - silence or single notes only",
    "bass": "Root note only in bass, no chord voicing"
  },
  "chordIdentification": {
    "description": "To identify a chord from notes: 1) Find all possible roots, 2) Calculate semitone distances from each potential root, 3) Match against chord semitone arrays",
    "steps": [
      "Convert all input notes to semitone values (0-11)",
      "Remove duplicates and normalize to single octave",
      "Try each note as potential root",
      "Calculate intervals (semitones) from that root to all other notes",
      "Sort intervals ascending",
      "Match against chord.semitones arrays",
      "If no exact match, find closest match considering omissions"
    ]
  },
  "chordConstruction": {
    "description": "To build a chord: 1) Get root semitone, 2) Add chord's semitone intervals, 3) Convert to note names",
    "steps": [
      "Get semitone value for root note from noteToSemitone",
      "For each semitone in chord.semitones array, add to root (mod 12 for note name)",
      "Convert resulting semitones to note names using chromaticScale",
      "Use sharps or flats based on key context"
    ]
  }
